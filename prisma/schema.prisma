generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(cuid())
  clerkId  String     @unique
  email    String
  document Document[]
}

model Document {
  id       String @id @default(cuid())
  fileName String
  fileUrl  String
  status   String // e.g., "PENDING", "PROCESSING", "READY", "FAILED"
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}
